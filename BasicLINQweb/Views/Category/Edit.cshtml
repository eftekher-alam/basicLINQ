@model BasicLINQweb.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2 border">
            <h1 class="text-center">Edit</h1>
            <form method="post" asp-action="Edit" asp-route-CategroyId="@Model.CategroyId">
                <div>
                    <label asp-for="CategoryName" class="form-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="m-3 text-center">
                    <button type="submit" class="btn btn-sm btn-outline-success">Save</button>
                    <button type="reset" class="btn btn-sm btn-outline-info">Reset</button>
                    <a asp-action="Index" class="btn btn-sm btn-outline-warning">back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
