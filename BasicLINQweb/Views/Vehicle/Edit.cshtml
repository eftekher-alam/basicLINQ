@model BasicLINQweb.ViewModel.VehicleViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border">
            <h1 class="text-center">Create</h1>
            <hr />
            <form method="post" asp-action="Edit" asp-route-vehicleId="@Model.vehicleId" enctype="multipart/form-data">
                <div>
                    <label asp-for="EngId" class="form-label"></label>
                    <input asp-for="EngId" type="text" class="form-control" />
                    <span asp-validation-for="EngId" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="PurchaseDate" class="form-label"></label>
                    <input asp-for="PurchaseDate" type="date" class="form-control" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label asp-for="CurrStatus" class="form-label"></label>
                    <div class="form-check form-check-inline">
                        <input asp-for="CurrStatus" class="form-check-input" type="radio" value="Running">
                        <label class="form-check-label" for="inlineRadio1">Running</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="CurrStatus" class="form-check-input" type="radio" value="Not Running">
                        <label class="form-check-label" for="inlineRadio2">Not Running</label>
                    </div>
                    <span asp-validation-for="CurrStatus" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Picture" class="form-label"></label>
                    <input asp-for="Picture" type="file" class="form-control" />
                </div>
                <div>
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option selected>-------- select -------</option>
                        @foreach (var item in ViewBag.Category)
                        {
                            <option value="@item.CategroyId">@item.CategoryName</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="m-3 text-center">
                    <button type="submit" class="btn btn-sm btn-outline-success">Save</button>
                    <button type="reset" class="btn btn-sm btn-outline-info">Reset</button>
                    <a asp-action="Index" class="btn btn-sm btn-outline-warning">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles{
    <link href="~/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(() => {
            $("#PurchaseDate").datepicker({
                format: 'yyyy-mm-dd'
            });
        })
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}